#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main(int argc, char* argv[])
{
	int N = atoi(argv[1]);
	int M = atoi(argv[2]);
	char** strArr = (char**)malloc(N * sizeof(char*));

	for (int i = 0; i < N; i++)
	{
		strArr[i] = (char*)malloc((M + 1) * sizeof(char));

	}
	for (int i = 0; i < N; i++)
	{
		scanf_s("%s", strArr[i], M + 1);
	}
	for (int i = 0; i < N; i++)
	{
		for (int j = 0; j < strlen(strArr[i]) / 2; j++)
		{
			char tmp;
			tmp = strArr[i][j];
			strArr[i][j] = strArr[i][strlen(strArr[i]) - 1 - j];
			strArr[i][strlen(strArr[i]) - 1 - j] = tmp;
		}
	}
	printf_s("%d strings were entered\n", N);
	for (int i = 0; i < N; i++)
	{
		printf_s("%s (len = %d)\n", strArr[i], strlen(strArr[i]));
	}
	for (int i = 0; i < N; i++)
	{
		free(strArr[i]);
	}
	free(strArr);
	return 0;
}
